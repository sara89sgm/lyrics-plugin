{
  "name": "BBC Radio Chrome Extension",
  "description": "Check and listen to BBC Radio from every page",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "BBC Radio",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
